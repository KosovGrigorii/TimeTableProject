@model IEnumerable<string>

@{
    var modelNameId = "filters[" + ViewBag.Index + "].Name";
    var modelHoursId = "filters[" + ViewBag.Index + "].Days";
}

<input list="filtered" type="text" placeholder="Name" name="@modelNameId"/>
<datalist id="filtered">
    @foreach (var item in Model)
    {
        <option value="@item"></option>
    }
</datalist>
<br>
<input type="number" step="1" min="0" name="@modelHoursId" placeholder="Hours amount"/>